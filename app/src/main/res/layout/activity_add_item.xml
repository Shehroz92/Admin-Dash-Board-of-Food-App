<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.activity.activity.AddItemActivity">

<ScrollView
    android:layout_width="0sp"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="16sp"
        android:layout_marginStart="8sp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Items"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintTop_toBottomOf="@id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="0sp"
        android:layout_height="57sp"
        android:hint="Enter Food Name"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginTop="24sp"
        android:paddingLeft="15sp"
        android:background="@drawable/edittextshape"
        android:elevation="5sp"
        android:textSize="20sp"
        android:inputType="text"
        android:fontFamily="@font/lato_regular"
        android:outlineSpotShadowColor="@color/text_colour"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="0sp"
        android:layout_height="57sp"
        android:hint="Enter Food Price"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginTop="24sp"
        android:paddingLeft="15sp"
        android:background="@drawable/edittextshape"
        android:elevation="5sp"
        android:textSize="20sp"
        android:inputType="text"
        android:fontFamily="@font/lato_regular"
        android:outlineSpotShadowColor="@color/text_colour"
        app:layout_constraintTop_toBottomOf="@id/editTextName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
   <TextView
       android:id="@+id/selectImage"
       android:layout_width="0sp"
       android:layout_height="57sp"
       android:text="Select Image"
       android:textColor="@color/black"
       android:gravity="center_vertical"
       android:paddingLeft="15sp"
       android:fontFamily="@font/lato_regular"
       android:paddingRight="15sp"
       android:layout_marginTop="24sp"
       android:background="@drawable/edittextshape"
       app:layout_constraintTop_toBottomOf="@id/editTextPrice"
       app:layout_constraintStart_toStartOf="@id/editTextPrice"
       app:layout_constraintEnd_toEndOf="@id/editTextPrice"
       android:drawableRight="@drawable/addimage"

       />
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24sp"
    app:cardCornerRadius="15sp"
    app:layout_constraintTop_toBottomOf="@id/selectImage"
    app:layout_constraintStart_toStartOf="@id/selectImage"
    app:layout_constraintEnd_toEndOf="@id/selectImage"
    >
    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="175sp"
        android:layout_height="110sp"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"

        />

</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
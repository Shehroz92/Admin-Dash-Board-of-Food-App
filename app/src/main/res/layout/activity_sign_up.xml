<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activity.activity.SignUpActivity"

    >
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/App_Name"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/lato_bold"
        android:text="Sign Up Here For Your\nAdmin Dashboard"
        android:textAlignment="center"
        android:textColor="@color/text_colour"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="12sp"
        android:text="Chose Your Location"
        android:textSize="12sp"
        android:textColor="@color/text_colour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/chooseLocation"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        app:endIconDrawable="@drawable/arrow_circle_down"
        app:endIconTint="@color/black"
        app:layout_constraintEnd_toEndOf="@id/textView11"
        app:layout_constraintStart_toStartOf="@id/textView11"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView11">

        <AutoCompleteTextView
            android:id="@+id/listofLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/edittextshape"
            android:inputType="none"
            android:textAllCaps="false"
            android:text="Choose location"
           />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editTextTextResturant"
        android:layout_width="325sp"
        android:layout_height="47sp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="15sp"
        android:elevation="5sp"
        android:ems="10"
        android:hint="Name of Owner"
        android:inputType="textEmailAddress"
        android:paddingLeft="5sp"
        app:layout_constraintEnd_toEndOf="@id/textView8"
        app:layout_constraintStart_toStartOf="@id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/chooseLocation"

        />

    <EditText
        android:id="@+id/editTextTextPhoneNumber"
        android:layout_width="325sp"
        android:layout_height="47sp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/resturant"
        android:drawablePadding="15sp"
        android:elevation="5sp"
        android:ems="10"
        android:hint="Name of Resturant"
        android:inputType="textEmailAddress"
        android:paddingLeft="5sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextResturant"
        app:layout_constraintStart_toStartOf="@+id/editTextTextResturant"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextResturant" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="325sp"
        android:layout_height="47sp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="15sp"
        android:elevation="5sp"
        android:ems="10"
        android:hint="Email or Phone number"
        android:inputType="textEmailAddress"
        android:paddingLeft="5sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPhoneNumber" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="325sp"
        android:layout_height="47sp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="15sp"
        android:elevation="5sp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="5sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextEmailAddress2"
        app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="or"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPassword2"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_regular"
        android:textStyle="bold"
        android:text="Sign Up With"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="152sp"
        android:layout_height="37sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_button"
        android:drawableLeft="@drawable/google"
        android:paddingLeft="6sp"
        android:text="Google"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="152sp"
        android:layout_height="37sp"
        android:layout_marginTop="6dp"
        android:background="@drawable/white_button"
        android:drawableLeft="@drawable/facebook"
        android:paddingLeft="15sp"
        android:text="FaceBook"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCreatAccount"
        android:layout_width="152sp"
        android:layout_height="45sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/green_button"
        android:fontFamily="@font/lato_bold"
        android:padding="6sp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_goneMarginTop="6sp"

        />

    <TextView
        android:id="@+id/already_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lato_regular"
        android:text="Already Have An Account?"
        android:textColor="@color/text_colour"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonCreatAccount"
        app:layout_constraintStart_toStartOf="@+id/buttonCreatAccount"
        app:layout_constraintTop_toBottomOf="@id/buttonCreatAccount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20sp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>